    <!-- Description and Request Booking -->
    <div class="container">
      <div class="row row-cols-2">
        <div class="col-8 mt-3">
          <h1>Luxury Villa in Chaweng</h1>
          <span
            ><i class="fa-solid fa-map-location"></i> Koh Samui
