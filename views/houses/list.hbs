                Log out
              </button>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <!-- Filterbar -->
    <div class="filters bg-light text-dark py-2">
      <form class="" action="index.html" method="post">
        <div class="container">
          <div class="row">
            <!-- Location -->
            <div class="col">
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fa-solid fa-location-dot"></i
                ></span>
                <select class="form-select">
                  <option selected>Any Location</option>
                  <option value="1">Koh Phangan</option>
                  <option value="2">Koh Samui</option>
                  <option value="3">Bali</option>
                </select>
              </div>
            </div>
            <!-- Rooms -->
            <div class="col">
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fa-solid fa-house-chimney"></i
                ></span>
                <select class="form-select">
                  <option selected>Any rooms</option>
                  <option value="1">1 Room</option>
                  <option value="2">2 Rooms</option>
                  <option value="3">3 Rooms</option>
                  <option value="4">4 Rooms</option>
                  <option value="5">5 Rooms</option>
                </select>
              </div>
            </div>
            <!-- max price -->
            <div class="col">
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fa-solid fa-dollar-sign"></i
                ></span>
                <input
                  type="number"
                  class="form-control"
                  placeholder="max price"
                />
              </div>
            </div>
            <!-- Price (low to high) -->
            <div class="col">
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fa-solid fa-arrow-down-short-wide"></i
                ></span>
                <select class="form-select">
                  <option selected>Price (low to high)</option>
                  <option value="1">Price (high to low)</option>
                </select>
              </div>
            </div>
            <!-- House name... -->
            <div class="col">
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  placeholder="House name..."
                />
              </div>
            </div>
            <!-- Search button -->
            <div class="col">
              <button class="btn btn-success">Search</button>
            </div>
          </div>
        </div>
      </form>
