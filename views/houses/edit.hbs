<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>List a House</title>
    <link rel="stylesheet" href="./styles/bootstrap.css" />
    <link rel="stylesheet" href="./styles/styles.css" />
    <script
      src="https://kit.fontawesome.com/af3685eef2.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="topBanner">
      <div class="container my-2">
        <div class="row">
          <div class="col">
            <img src="./images/logo-airbnb.png" alt="Airbnb" />
          </div>
          <div class="col">
            <div class="row text-end">
              <div class="col text-end">
                <button type="button" class="btn btn-outline-secondary">
                  <img
                    src="https://randomuser.me/api/portraits/men/11.jpg"
                    class="rounded-circle avatarimg"
                    alt="avatar login"
                  />
                  <span>Douglas</span>
                </button>
                <button type="button" class="btn btn-outline-secondary">
                  Log out
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <!-- Start> Form -->
      <form class="" action="index.html" method="post">
        <h5>List a house</h5>
        <label class="form-label">Short Title</label>
        <input type="text" class="form-control" />
        <label class="form-label">Description</label>
        <textarea class="form-control" rows="5"></textarea>
        <label class="form-label">Number of Rooms</label>
        <input type="number" class="form-control" />
        <label class="form-label">Location</label>
        <select class="form-select">
          <option value="1" selected>Koh Phangan</option>
          <option value="2">Koh Samui</option>
          <option value="3">Bali</option>
        </select>
        <label class="form-label">Price (per night)</label>
        <div class="input-group">
          <span class="input-group-text"
            ><i class="fa-solid fa-dollar-sign"></i
          ></span>
          <input type="number" class="form-control" />
        </div>
        <label class="form-label">Add Photos (up to 9)</label>
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <input type="text" class="form-control" placeholder="http://..." />
        <button class="btn btn-success mt-2">Submit</button>
      </form>
      <!--END FORM-->
      <button type="button" class="btn btn-danger mt-3">Delete House</button>
    </div>
  </body>
</html>
